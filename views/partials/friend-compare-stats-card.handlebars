<div class="card shadow-lg p-0 d-flex flex-column compare-user-card m-2" friend-id="{{_locals.friendData.id}}">
    <div class="d-flex flex-row">
        <button class="btn transparent-red-glow-btn position-absolute bottom-0 end-0 m-3"
            data-friend-id="{{_locals.friendData.id}}" type="button" id="see-stats-button">
            See stats
        </button>
        <img src="{{_locals.friendData.steam_avatar_full}}" class="img-fluid steam-user-image rounded" alt="...">
        <div class="card-body d-flex flex-column justify-content-between">
            <div>
                <p class="red-glowing-neon-text fs-4 neon-tubes-lowercase">{{_locals.friendData.steam_username}}</p>
                <a href="{{_locals.friendData.profile_url}}" target="_blank" class="neon-red-link">Steam
                    Profile</a>
            </div>
        </div>
    </div>
</div>