<div class="d-flex p-1">
    <h2 class="blue-glowing-neon-text lh-base m-0 neon-tubes-lowercase">Stats for {{_locals.game.name}}</h2>
</div>
<ul class="list-group col-12 col-xl-10 col-xxl-8 mt-2">
    {{#each stats}}
    <li class="list-group-item user-stat-list-group-item d-flex justify-content-between p-1 pb-2">
        <p class="m-0">{{name}}</p>
        <p class="m-0">{{score}}</p>
    </li>
    {{/each}}
</ul>